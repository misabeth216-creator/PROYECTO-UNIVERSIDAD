/* Archivo: script.js */

function calcularGastos() {
    // 1. Obtener los datos ingresados por el usuario
    // Usamos parseFloat para asegurarnos de que los valores sean números
    const gastoComida = parseFloat(document.getElementById('gasto_comida').value) || 0;
    const gastoPasaje = parseFloat(document.getElementById('gasto_pasaje').value) || 0;
    const gastoGasolina = parseFloat(document.getElementById('gasto_gasolina').value) || 0;
    const pagoUniversidad = parseFloat(document.getElementById('pago_universidad_semanal').value) || 0;

    // 2. Realizar la suma de los gastos totales
    const totalGastos = gastoComida + gastoPasaje + gastoGasolina + pagoUniversidad;

    // 3. Mostrar el resultado al usuario
    const resultadoDiv = document.getElementById('resultado');
    resultadoDiv.innerHTML = `
        <h2>Tu Gasto Semanal Estimado:</h2>
        <p>Total de Gastos: <strong>${totalGastos.toFixed(2)} €/$</strong></p>
        <p>Desglose:</p>
        <ul>
            <li>Comida: ${gastoComida.toFixed(2)} €/$</li>
            <li>Pasaje: ${gastoPasaje.toFixed(2)} €/$</li>
            <li>Gasolina: ${gastoGasolina.toFixed(2)} €/$</li>
            <li>Universidad: ${pagoUniversidad.toFixed(2)} €/$</li>
        </ul>
        <p>¡Ingresa tus datos reales para tener un mejor control de tus finanzas!</p>
    `;
}
